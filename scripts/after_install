#!/bin/bash


usermod -a -G ec2-user apache
chmod 710 /home/ec2-user
chmod 664 /home/ec2-user/writing/db.sqlite3
chmod a+x /home/ec2-user/writing/writing/wsgi.py
chown :apache /home/ec2-user/writing/db.sqlite3

cd /usr/local
wget https://www.python.org/ftp/python/3.6.9/Python-3.6.12.tgz
tar xzf Python-3.6.12.tgz
cd Python-3.6.12
./configure --enable-optimizations --enable-loadable-sqlite-extensions
make altinstall
rm.Python-3.6.12.tgz

cd /home/ec2-user/writing
virtualenv --python=/usr/local/bin/python3.6 django-env
source django-env/bin/activate
python3.6 -m pip install -r requirements.txt


